<Window x:Class="WpfTaskScheduler.ChangeDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTaskScheduler"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="ChangeDateWindow" Height="137" Width="143">
    <Grid>
        <Label x:Name="label" Content="Укажите новую дату" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="button" Content="Готово" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="122" Height="21" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Отмена" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="122" Height="21" Click="button_Copy_Click"/>

    </Grid>
</Window>
